#include<iostream>
#include<vector>
using namespace std ;
bool isValid(vector<int>&arr, int n,int m,int maxAllow){
    int pages=0,student=1;
    for(int i=0;i<n;i++){
        if(arr[i]>maxAllow){
            return false;
        }
        if(pages+arr[i]<=maxAllow){
            pages += arr[i];
        }else{
            student++;
            pages = arr[i];
        }
    }
     return (student>m)?false:true;
}
int bookAllocation(vector<int>&arr,int n,int m){
    if(m>n){
        return -1;
    }
    int sum=0;
    for(int i=0;i<n;i++){
        sum += arr[i];
    }
    int st=0,end=sum;
    int ans=-1;
    while(st<=end){
        int mid=st+(end-st)/2;
        if(isValid(arr,n,m,mid)){  //Left
            ans=mid;
            end=mid-1;
        }else{        //Right 
            st=mid+1;
        }
    }
    return ans ;
}
int main(){
    vector<int>arr={8,6,3};
    int n=3,m=2;
    cout<<"Minimum Pages ="<<bookAllocation(arr,n,m)<<endl;
    
    return 0 ;
}
